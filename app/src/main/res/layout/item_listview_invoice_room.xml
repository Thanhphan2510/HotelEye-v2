<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/id_item_listview_invoice_room"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="STT"
            android:ellipsize="marquee"
            android:lines="3"
            android:paddingLeft="5dp"
            android:background="@drawable/cell_shape"
            />

        <TextView
            android:id="@+id/room_item_listview_invoice_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/cell_shape"
            android:ellipsize="marquee"
            android:lines="3"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="Phòng" />


        <TextView
            android:id="@+id/intime_item_listview_invoice_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Giờ vào"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:lines="3"
            android:paddingLeft="5dp"
            android:background="@drawable/cell_shape"/>
        <TextView
            android:id="@+id/outtime_item_listview_invoice_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Giờ ra"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:lines="3"
            android:paddingLeft="5dp"
            android:background="@drawable/cell_shape"/>
        <TextView
            android:id="@+id/amount_item_listview_invoice_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="Thành tiền"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:lines="3"
            android:gravity="right"
            android:paddingEnd="5dp"
            android:background="@drawable/cell_shape"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>