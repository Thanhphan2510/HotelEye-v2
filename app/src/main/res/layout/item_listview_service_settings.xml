<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name_item_listview_service"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="Tên"
            android:ellipsize="marquee"
            android:lines="3"
            android:textColor="#0C0C0C"
            android:background="@drawable/cell_shape"
            />

        <TextView
            android:id="@+id/type_item_listview_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Loại"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:lines="3"
            android:textColor="#0C0C0C"
            android:background="@drawable/cell_shape"/>

        <TextView
            android:id="@+id/unity_item_listview_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đơn vị tính"
            android:ellipsize="marquee"
            android:textColor="#0C0C0C"
            android:singleLine="true"
            android:lines="3"
            android:background="@drawable/cell_shape" />

        <TextView
            android:id="@+id/price_item_listview_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giá/đơn vị"
            android:ellipsize="marquee"
            android:textColor="#0C0C0C"
            android:singleLine="true"
            android:lines="3"
            android:background="@drawable/cell_shape"/>
        <TextView
            android:id="@+id/description_item_listview_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="Mô tả"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="#0C0C0C"
            android:lines="3"
            android:background="@drawable/cell_shape"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>