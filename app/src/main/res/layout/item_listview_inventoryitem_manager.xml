<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name_item_listview_inventoryitem_manager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="tên"
            android:ellipsize="marquee"
            android:lines="3"
            android:background="@drawable/cell_shape"
            />

        <TextView
            android:id="@+id/quantity_item_listview_inventoryitem_manager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/cell_shape"
            android:ellipsize="marquee"
            android:lines="3"
            android:singleLine="true"
            android:text="số lượng" />


        <TextView
            android:id="@+id/price_item_listview_inventoryitem_manager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Giá tiền"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:lines="3"
            android:background="@drawable/cell_shape"/>
        <TextView
            android:id="@+id/date_item_listview_inventoryitem_manager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="ngày nhập"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:lines="3"
            android:background="@drawable/cell_shape"/>
        <TextView
            android:id="@+id/description_item_listview_inventoryitem_manager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="mô tả"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:lines="3"
            android:background="@drawable/cell_shape"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>