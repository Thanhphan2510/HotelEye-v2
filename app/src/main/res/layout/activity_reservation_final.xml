<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.receptionviews.ReservationFinal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:id="@+id/toolbar"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/btnBack_reservation_final"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
                    >

                </Button>
                <TextView
                    android:id="@+id/title_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin đặt phòng"
                    android:layout_marginLeft="40dp"
                    android:foregroundGravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    >

                </TextView>
            </androidx.appcompat.widget.Toolbar>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout

        android:id="@+id/ln_fill_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Số CMT Khách hàng"/>
        <EditText
            android:id="@+id/idcard_edt_reservation_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="187756057"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Tên Khách hàng"/>
        <EditText
            android:id="@+id/customer_edt_reservation_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh Phan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Số điện thoại liên hệ"/>
        <EditText
            android:id="@+id/phone_number_edt_reservation_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0396065919"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Thời gian nhận phòng"/>
        <EditText
            android:id="@+id/checkin_edt_reservation_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18h00 01/12/2020"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Thời gian trả phòng"/>
        <EditText
            android:id="@+id/checkout_edt_reservation_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18h00 06/12/2020"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Đặt cọc"/>
        <EditText
            android:id="@+id/deposit_edt_reservation_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Phòng đặt"/>
        <EditText
            android:id="@+id/room_edt_reservation_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="101, 102, 103"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Ghi chú"/>
        <EditText
            android:id="@+id/note_edt_reservation_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không"/>
    </LinearLayout>
    <Button
        android:id="@+id/next_btn_reservation_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>