<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/name_item_listview_checkout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bia Hà Nội"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lines="3"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/minus_btn_item_listview_checkout"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="-" />
            <EditText
                android:id="@+id/quantity_edt_item_listview_checkout"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginHorizontal="5dp"
                android:inputType="number"
                />
            <Button
                android:id="@+id/plus_btn_item_listview_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>