<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/id_item_listview_view_colleague"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="STT"
            android:ellipsize="marquee"
            android:gravity="center"
            android:lines="3"
            android:background="@drawable/cell_shape"
            />

        <TextView
            android:id="@+id/name_item_listview_view_colleague"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/cell_shape"
            android:ellipsize="marquee"
            android:lines="3"
            android:gravity="center"
            android:singleLine="true"
            android:text="Họ và tên" />


        <TextView
            android:id="@+id/date_of_birth_item_listview_view_colleague"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Ngày sinh"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:lines="3"
            android:background="@drawable/cell_shape"/>
        <TextView
            android:id="@+id/phone_number_item_listview_view_colleague"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Số điện thoại"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:lines="3"
            android:background="@drawable/cell_shape"/>
        <Button
            android:id="@+id/detail_item_item_listview_view_colleague"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:text="Chi tiết"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:lines="3"
            android:textAllCaps="false"
            android:background="@drawable/cell_shape"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>